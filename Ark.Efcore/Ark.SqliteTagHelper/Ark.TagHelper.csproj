<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>net7.0</TargetFramework>
		<ImplicitUsings>enable</ImplicitUsings>
		<Nullable>enable</Nullable>
		<Version>0.1.7</Version>
		<Description> 
			base implementation for tag help view for sqlite-view, dir-list.
			included new upload-view control
		</Description>
		<GeneratePackageOnBuild>true</GeneratePackageOnBuild>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<IsPackable>true</IsPackable>
		<OutputType>Library</OutputType>
		<PackageIcon>ark_logo.png</PackageIcon>
		<Authors>Immanuel R</Authors>
		<Title>Tag Helpers</Title>
		<PackageTags>upload-view, dir-list;TagHelper;DirectoryList(dir-list);UploadViewupload-view;</PackageTags>
		<PackageReleaseNotes>This is the file-view renderer for csv along with large dataset loading</PackageReleaseNotes>
		<RepositoryUrl>https://github.com/immi5556/ark-efcore/tree/main/Ark.Efcore/Ark.SqliteTagHelper</RepositoryUrl>
		<RepositoryType>git</RepositoryType>
		<RepositoryBranch>main</RepositoryBranch>
	</PropertyGroup>

	<ItemGroup>
		<PackageReference Include="Ark.Sqlite" Version="1.1.4" />
		<PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="6.0.0" />
		<PackageReference Include="Microsoft.AspNet.WebApi.Core" Version="5.3.0" />
	</ItemGroup>
	<ItemGroup>
		<None Include="Icon\ark_logo.png" Pack="true" PackagePath="" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Ark.Sqlite\Ark.Sqlite.csproj" />
	</ItemGroup>

</Project>
